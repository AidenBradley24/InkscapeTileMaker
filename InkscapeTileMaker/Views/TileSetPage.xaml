<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InkscapeTileMaker.Pages.TileSetPage"
             Title="TileSetPage"
             x:Name="TilePage"
             xmlns:vms="clr-namespace:InkscapeTileMaker.ViewModels"
             x:DataType="vms:DesignerViewModel"
             xmlns:models="clr-namespace:InkscapeTileMaker.Models">

    <Grid BackgroundColor="Gray"
          Padding="12"
          RowDefinitions="Auto,*">

        <!-- Top details section -->
        <Grid Row="0"
              ColumnDefinitions="Auto,*"
              RowDefinitions="Auto,Auto"
              Padding="0,0,0,12">
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Text="Tileset:"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center"
                   Margin="0,0,8,0" />

            <Label Grid.Row="0"
                   Grid.Column="1"
                   Text="{Binding FileName}"
                   VerticalTextAlignment="Center" />

            <Label Grid.Row="1"
                   Grid.Column="0"
                   Text="Tile Size:"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center"
                   Margin="0,4,8,0" />

            <Label Grid.Row="1"
                   Grid.Column="1"
                   Text="{Binding TileSize, StringFormat='{}{0.x} x {0.y}'}"
                   VerticalTextAlignment="Center"
                   Margin="0,4,0,0" />
        </Grid>

        <!-- Tiles flex layout -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="8">

                <!-- Tiles flex layout -->
                <FlexLayout
                    Direction="Row"
                    Wrap="Wrap"
                    AlignItems="Start"
                    AlignContent="Start"
                    JustifyContent="Start"
                    Margin="0"
                    BindableLayout.ItemsSource="{Binding Tiles}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="vms:TileViewModel">
                            <!-- Each tile -->
                            <Border
                                Padding="4"
                                Margin="2"
                                BackgroundColor="White"
                                Stroke="Black"
                                StrokeThickness="1"
                                ToolTipProperties.Text="{Binding Value.Name}">
                                <Grid WidthRequest="32"
                                      HeightRequest="32"
                                      BackgroundColor="LightGray">

                                    <!-- Tile visual -->
                                    <Image Source="{Binding PreviewImage}"
                                           Aspect="AspectFill"
                                           WidthRequest="32"
                                           HeightRequest="32" />

                                    <!-- Name overlay (optional) -->
                                    <Label Text="{Binding Value.Name}"
                                           FontSize="10"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           LineBreakMode="TailTruncation"
                                           TextColor="Black"
                                           BackgroundColor="#80FFFFFF" />
                                </Grid>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding BindingContext.SelectTileCommand, Source={x:Reference Name=TilePage}}"
                                        CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>

                <Button
                    Text="Add Tile"
                    Command="{Binding AddTileCommand}" />

                <Button
                    Text="Fill Tiles"
                    Command="{Binding FillTilesCommand}" />


            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>