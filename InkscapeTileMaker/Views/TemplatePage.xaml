<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InkscapeTileMaker.Views.TemplatePage"
             Title="New"
             xmlns:vms="clr-namespace:InkscapeTileMaker.ViewModels"
             x:DataType="vms:LandingViewModel"
             x:Name="TemplatePageRoot"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <ContentPage.Resources>
        <toolkit:IsNotNullConverter x:Key="IsNotNullConverter" />
    </ContentPage.Resources>
    <Grid RowDefinitions="40, *, 50"
          ColumnDefinitions="0.3*, 0.7*"
          Padding="10"
          ColumnSpacing="5">
        <Label 
            Text="Templates"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Grid.ColumnSpan="2"
            FontSize="Title"/>
        <Border Grid.Row="1"
                Grid.Column="0">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                  ColumnDefinitions="Auto,*"
                  Padding="5"
                  RowSpacing="8"
                  ColumnSpacing="8">
                <Label Grid.Row="0"
                       Grid.Column="0"
                       Text="Tile Size X:"
                       VerticalOptions="Center" />
                <Entry Grid.Row="0"
                       Grid.Column="1"
                       Text="{Binding TileSizeX, Mode=TwoWay}"
                       Keyboard="Numeric" />

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Text="Tile Size Y:"
                       VerticalOptions="Center" />
                <Entry Grid.Row="1"
                       Grid.Column="1"
                       Text="{Binding TileSizeY, Mode=TwoWay}"
                       Keyboard="Numeric" />

                <Label Grid.Row="2"
                       Grid.Column="0"
                       Text="Tile Columns #:"
                       VerticalOptions="Center" />
                <Entry Grid.Row="2"
                       Grid.Column="1"
                       Text="{Binding TileSetSizeX, Mode=TwoWay}"
                       Keyboard="Numeric" />

                <Label Grid.Row="3"
                       Grid.Column="0"
                       Text="Tile Rows #:"
                       VerticalOptions="Center" />
                <Entry Grid.Row="3"
                       Grid.Column="1"
                       Text="{Binding TileSetSizeY, Mode=TwoWay}"
                       Keyboard="Numeric" />
            </Grid>
        </Border>
        <CollectionView ItemsSource="{Binding Templates}"
                        SelectionMode="Single"
                        Grid.Row="1"
                        Grid.Column="1"
                        SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vms:TemplateRecord">
                    <Border Padding="10"
                            Margin="0,5">
                        <Grid>
                            <Label Text="{Binding Name}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <HorizontalStackLayout Grid.ColumnSpan="2"
                               Grid.Row="2"
                               Padding="2"
                               HorizontalOptions="End">
            <Button Text="Create" 
                    Command="{Binding CreateWithTemplateCommand}" 
                    IsEnabled="{Binding SelectedTemplate, Converter={StaticResource IsNotNullConverter}}"
                    HorizontalOptions="End"/>

        </HorizontalStackLayout>
    </Grid>
</ContentPage>