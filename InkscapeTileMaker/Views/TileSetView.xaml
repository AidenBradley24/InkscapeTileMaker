<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InkscapeTileMaker.Views.TileSetView"
             xmlns:vms="clr-namespace:InkscapeTileMaker.ViewModels"
             xmlns:models="clr-namespace:InkscapeTileMaker.Models;assembly=InkscapeTileMaker.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:ctrls="clr-namespace:InkscapeTileMaker.Controls"
             xmlns:conv="clr-namespace:InkscapeTileMaker.Converters"
             x:DataType="vms:DesignerViewModel"
             x:Name="TileSet">
    <ContentView.Resources>
        <conv:CurrentIsSelectedConverter x:Key="CurrentIsSelectedConverter" />
    </ContentView.Resources>
    <Grid Padding="12"
          RowDefinitions="Auto,Auto,*,Auto">

        <!-- Top details section -->
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*"
              RowDefinitions="Auto,Auto"
              Padding="0,0,0,12">
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Text="Tileset:"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center"
                   Margin="0,0,8,0" />

            <Label Grid.Row="0"
                   Grid.Column="1"
                   Text="{Binding FileName}"
                   VerticalTextAlignment="Center" />

            <Label Grid.Row="1"
                   Grid.Column="0"
                   Text="Tile Size:"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center"
                   Margin="0,4,8,0" />

            <Label Grid.Row="1"
                   Grid.Column="1"
                   Text="{Binding TileSize, StringFormat='{}{0.x} x {0.y}'}"
                   VerticalTextAlignment="Center"
                   Margin="0,4,0,0" />
        </Grid>

        <!-- Tiles flex layout -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Spacing="8">
                <FlexLayout
                    Direction="Row"
                    Wrap="Wrap"
                    AlignItems="Start"
                    AlignContent="Start"
                    JustifyContent="Start"
                    Margin="0"
                    BindableLayout.ItemsSource="{Binding Tiles}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="vms:TileViewModel">
                            <ctrls:ToolIcon 
                                Padding="4"
                                Margin="2"
                                WidthRequest="50"
                                HeightRequest="50"
                                ToolName="{Binding Name}"
                                Source="{Binding PreviewImage}"
                                Command="{Binding BindingContext.SelectTileCommand, Source={x:Reference TileSet}}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="Transparent"
                                UnselectedOutlineStroke="White"
                                SelectedOutlineStroke="{DynamicResource PrimaryDark}">
                                <ctrls:ToolIcon.IsSelected>
                                    <MultiBinding Converter="{StaticResource CurrentIsSelectedConverter}">
                                        <Binding Path="." />
                                        <Binding Path="BindingContext.SelectedTile" Source="{x:Reference TileSet}" />
                                    </MultiBinding>
                                </ctrls:ToolIcon.IsSelected>
                            </ctrls:ToolIcon>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!--Tile set options-->
        <Border Grid.Row="3"
                Margin="0,12,0,0"
                Padding="8"
                Stroke="DarkGray"
                StrokeThickness="1">
            <VerticalStackLayout Spacing="10">
                <Label Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Text="Tileset Options"
                   FontAttributes="Bold"
                   Margin="0,0,0,4" />

                <HorizontalStackLayout Spacing="20">
                    <Button Text="Fill tiles" 
                            Command="{Binding FillTilesCommand}"
                            HeightRequest="25"/>
                    <HorizontalStackLayout>
                        <VerticalStackLayout Spacing="1">
                            <Label Text="Replace existing" FontSize="12" />
                            <Switch IsToggled="{Binding ReplaceExistingTiles}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="1">
                            <Label Text="Fill empty tiles" FontSize="12" />
                            <Switch IsToggled="{Binding FillEmptyTiles}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>


                <VerticalStackLayout Grid.Row="3"
                     HorizontalOptions="Start"
                     VerticalOptions="Center">
                    <Button Text="Clear all tiles"
                        TextColor="White"
                        BackgroundColor="#CCAA0000"
                        Command="{Binding ClearAllTilesCommand}" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentView>
